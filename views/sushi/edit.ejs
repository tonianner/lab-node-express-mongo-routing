<div class="container">
  <h3> <%=sushi.sushi_name %></h3>

  <div class="well">
    <fieldset>
      <legend>Edit comment</legend>
      <form action='/sushi/<%= sushi.id %>?_method=PUT%>' method="POST">
        <div class="form-group col-md-4">
          <textarea name="comment[comment]" class="form-control" rows="5" value="<%= sushi.comment %>"></textarea>
        </div>
        <div class="form-group col-md-4">
          <button class="btn btn-success col-md-12">Update Comment</button>
        </div>
      </form>
    </fieldset>
  </div>
</div>